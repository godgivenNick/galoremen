section.category-catalog#category_catalog
    .n-container.category-catalog__n-container

        <!-- Фильтр -->
        .category-catalog-filter
            .category-catalog-filter__tabs
                .category-catalog-filter__tab(filter-tab='1')._active Бренд
                .category-catalog-filter__tab(filter-tab='2') Тип продукта
                .category-catalog-filter__tab(filter-tab='3') Цена
                .category-catalog-filter__tab(filter-tab='4') Страна производитель

            <!-- По брендам -->
            .category-catalog-filter__filters(filter-id='1')
                label.category-catalog-filter__checkbox
                    input(type="checkbox")
                    span London Grooming
                label.category-catalog-filter__checkbox
                    input(type="checkbox")
                    span London Grooming
                label.category-catalog-filter__checkbox
                    input(type="checkbox")
                    span Ruger


            <!-- По типу -->
            .category-catalog-filter__filters(filter-id='2')
                label.category-catalog-filter__checkbox
                    input(type="checkbox")
                    span Сигареты
                label.category-catalog-filter__checkbox
                    input(type="checkbox")
                    span Кокаин
                label.category-catalog-filter__checkbox
                    input(type="checkbox")
                    span Халва


            <!-- Разброс цен -->
            .category-catalog-filter__filters(filter-id='3')._active

                .category-catalog-filter-range(max-price='50000')
                    p.category-catalog-filter-range__text Диапазон цен:
                    .category-catalog-filter-range__col
                        .category-catalog-filter-range__prices
                            input(type='text' id='min_price' value='0').field-face
                            span -
                            input(type='text' id='max_price').field-face
                            span Руб.

                        .category-catalog-filter-range__range



            <!-- По стране -->
            .category-catalog-filter__filters(filter-id='4')
                label.category-catalog-filter__checkbox
                    input(type="checkbox")
                    span Россия
                label.category-catalog-filter__checkbox
                    input(type="checkbox")
